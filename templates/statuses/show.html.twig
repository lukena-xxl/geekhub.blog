{% extends 'base.html.twig' %}

{% block title %}Статус "{{ status.title }}"{% endblock %}

{% block body %}
    <h1>Статус "{{ status.title }}"</h1>
    <div class="mt-3">
        <div><strong>ID:</strong> {{ status.id }}</div>
        <div><strong>Название:</strong> {{ status.title }}</div>
    </div>
    <div class="mt-3">
        <a class="btn btn-warning" href="{{ path('status_edit', {'id': status.id}) }}" role="button"><i class="fas fa-edit"></i></a>
        <a class="btn btn-danger" href="{{ path('status_delete', {'id': status.id}) }}" role="button"><i class="fas fa-trash-alt"></i></a>
    </div>
{% endblock %}
