{% extends 'base.html.twig' %}

{% block title %}Statuses{% endblock %}

{% block body %}
    <a class="btn btn-success" href="{{ path('status_add') }}" role="button"><i class="fas fa-plus-circle mr-2"></i>Add status</a>
    {% if statuses %}
    <table class="table mt-3">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Users</th>
            <th>Actions</th>
        </tr>
        {% for status in statuses %}
            <tr>
                <td>{{ status.id }}</td>
                <td>{{ status.title }}</td>
                <td>{{ status.users.count }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('status_show', {'id': status.id}) }}" role="button"><i class="fas fa-info-circle"></i></a>
                    <a class="btn btn-warning" href="{{ path('status_edit', {'id': status.id}) }}" role="button"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-danger" href="{{ path('status_delete', {'id': status.id}) }}" role="button"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% endfor %}
    </table>
    {% else %}
        <p class="mt-3">There are no statuses yet!</p>
    {% endif %}
{% endblock %}
