{% extends 'base.html.twig' %}

{% block title %}Добавление пользователя{% endblock %}

{% block body %}
    <h1>Добавление пользователя</h1>
    <form method="post" action="{{ path('user_add') }}">
        <div class="form-group">
            <label for="formGroupLogin">Логин *</label>
            <input type="text" name="login" class="form-control w-50" id="formGroupLogin" placeholder="Введите логин" required>
        </div>
        <div class="form-group">
            <label for="formGroupPassword">Пароль *</label>
            <input type="password" name="password" class="form-control w-50" id="formGroupPassword" autocomplete="off" required>
        </div>
        <div class="form-group">
            <label for="formGroupName">Имя</label>
            <input type="text" name="name" class="form-control w-50" id="formGroupName" placeholder="Введите имя">
        </div>
        <div class="form-group">
            <label for="formGroupStatus">Статус *</label>
            <select name="status" class="form-control w-50" id="formGroupStatus" required>
                <option value="" class="text-muted">выберите статус</option>
                {% if statuses %}
                    {% for status in statuses %}
                        <option value="{{ status.id }}">{{ status.title }}</option>
                    {% endfor %}
                {% endif %}
            </select>
        </div>
        <button type="submit" class="btn btn-success mt-3">Добавить пользователя</button>
    </form>
{% endblock %}
