{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <div class="d-inline-block mr-3"><a class="btn btn-success" href="{{ path('user_add') }}" role="button"><i class="fas fa-plus-circle mr-2"></i>Add user</a></div>
    <div class="d-inline-block">
        {{ form_start(form_target) }}
        <div class="d-inline-block">Current user:</div>
        <div class="d-inline-block">{{ form_row(form_target.user) }}</div>
        <div class="d-inline-block">{{ form_row(form_target.submit) }}</div>
        {{ form_end(form_target) }}
    </div>
    <div class="my-3">
        {{ form_start(form_sort) }}
        <div class="d-inline-block">Users with</div>
        <div class="d-inline-block">{{ form_row(form_sort.symbol) }}</div>
        <div class="d-inline-block">than</div>
        <div class="d-inline-block">{{ form_row(form_sort.num) }}</div>
        <div class="d-inline-block">posts in:</div>
        <div class="d-inline-block">{{ form_row(form_sort.category) }}</div>
        <div class="d-inline-block">{{ form_row(form_sort.submit) }}</div>
        {{ form_end(form_sort) }}
    </div>
    {% if users %}
        <table class="table mt-3">
            <tr>
                <th>ID</th>
                <th>Login</th>
                <th>Status</th>
                <th>Name</th>
                <th>Registration date</th>
                <th>Publications</th>
                <th class="min-width-actions">Actions</th>
            </tr>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.login }}</td>
                    <td>{{ user.status.title }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.registrationDate.format("d.m.Y") }}</td>
                    <td>{{ user.articles.count }}</td>
                    <td>
                        {% if target_user %}
                        <a class="btn btn-{% if user in target_user.favoriteUsers %}success{% else %}light{% endif %} mb-1" href="{{ path('favorite_users', {'id': user.id}) }}" role="button"><i class="far fa-star"></i></a>
                        {% endif %}
                        <a class="btn btn-info mb-1" href="{{ path('user_show', {'id': user.id}) }}" role="button"><i class="fas fa-info-circle"></i></a>
                        <a class="btn btn-warning mb-1" href="{{ path('user_edit', {'id': user.id}) }}" role="button"><i class="fas fa-edit"></i></a>
                        <a class="btn btn-danger mb-1" href="{{ path('user_delete', {'id': user.id}) }}" role="button"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    {% else %}
        <p class="mt-3">No users yet!</p>
    {% endif %}
{% endblock %}
