{% extends 'base.html.twig' %}

{% block title %}Редактирование пользователя{% endblock %}

{% block body %}
    <h1>Редактирование данных пользователя</h1>
    <form method="post" action="{{ path('user_edit', {'id': user.id}) }}">
        <div class="form-group">
            <label for="formGroupLogin">Логин *</label>
            <input type="text" name="login" value="{{ user.login }}" class="form-control w-50" id="formGroupLogin" placeholder="Введите логин" required>
        </div>
        <div class="form-group">
            <label for="formGroupPassword">Пароль *</label>
            <input type="password" name="password" value="" class="form-control w-50" id="formGroupPassword" autocomplete="off">
        </div>
        <div class="form-group">
            <label for="formGroupName">Имя</label>
            <input type="text" name="name" value="{{ user.name }}" class="form-control w-50" id="formGroupName" placeholder="Введите имя">
        </div>
        <div class="form-group">
            <label for="formGroupStatus">Статус *</label>
            <select name="status" class="form-control w-50" id="formGroupStatus" required>
                <option value="" class="text-muted">выберите статус</option>
                {% if statuses %}
                    {% for status in statuses %}
                        <option value="{{ status.id }}"{% if status.id == user.status.id %} selected{% endif %}>{{ status.title }}</option>
                    {% endfor %}
                {% endif %}
            </select>
        </div>
        <input type="hidden" name="id" value="{{ user.id }}">
        <button type="submit" class="btn btn-success mt-3">Редактировать пользователя</button>
    </form>
{% endblock %}
