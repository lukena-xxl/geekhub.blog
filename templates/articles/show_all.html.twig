{% extends 'base.html.twig' %}

{% block title %}Publications{% endblock %}

{% block body %}
    <a class="btn btn-success" href="{{ path('article_add') }}" role="button"><i class="fas fa-plus-circle mr-2"></i>Add post</a>
    <div class="mt-3">
        {{ form_start(form_sort) }}
        <div>
            <div class="d-inline-block">Publications</div>
            <div class="d-inline-block">{{ form_row(form_sort.user) }}</div>
            <div class="d-inline-block">in</div>
            <div class="d-inline-block">{{ form_row(form_sort.category) }}</div>
            <div class="d-inline-block">from</div>
            <div class="d-inline-block">{{ form_row(form_sort.tag) }}</div>
        </div>
        <div>
            <div class="d-inline-block">created</div>
            <div class="d-inline-block">{{ form_row(form_sort.from) }}</div>
            <div class="d-inline-block">to</div>
            <div class="d-inline-block">{{ form_row(form_sort.to) }}</div>
            <div class="d-inline-block">{{ form_row(form_sort.submit) }}</div>
        </div>
        {{ form_end(form_sort) }}
    </div>
    {% if articles %}
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Picture</th>
            <th>Heading</th>
            <th>Category</th>
            <th>Tags</th>
            <th>Posted</th>
            <th>Created</th>
            <th class="min-width-actions">Actions</th>
        </tr>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td class="max-width-200"><img src="{% if article.image %}{{ asset('uploads/articles/'~article.image) }}{% else %}{{ asset('build/images/common/no-image.png') }}{% endif %}" class="img-fluid"></td>
                <td {% if article.isVisible == 0 %}
                        class="text-danger"
                    {% else %}
                        class="text-dark"
                    {% endif %}>{{ article.title }}</td>
                <td>{{ article.category.title }}</td>
                <td>{{ article.tag.count }}</td>
                <td>{{ article.user.login }}</td>
                <td>{{ article.createDate.format("d.m.Y") }}</td>
                <td>
                    {% if target_user %}
                    <a class="btn btn-{% if article in target_user.favoriteArticles %}success{% else %}light{% endif %}  mb-1" href="{{ path('favorite_articles', {'id': article.id}) }}" role="button"><i class="far fa-star"></i></a>
                    {% endif %}
                    <a class="btn btn-info mb-1" href="{{ path('article_show', {'id': article.id}) }}" role="button"><i class="fas fa-info-circle"></i></a>
                    <a class="btn btn-warning mb-1" href="{{ path('article_edit', {'id': article.id}) }}" role="button"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-danger mb-1" href="{{ path('article_delete', {'id': article.id}) }}" role="button"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% endfor %}
    </table>
    {% else %}
        <p class="mt-3">No posts yet!</p>
    {% endif %}
{% endblock %}
