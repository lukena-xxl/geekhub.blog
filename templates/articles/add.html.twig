{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}
{% block body %}
    <h1>{{ title }}</h1>
    <div class="mt-3 form-content">
        {{ form_start(form_add) }}
        <fieldset>
            {{ form_row(form_add.title) }}
            {{ form_row(form_add.slug) }}
            {{ form_row(form_add.category) }}
            {{ form_row(form_add.tag) }}
            {{ form_row(form_add.user) }}
            {{ form_row(form_add.body) }}
            {{ form_row(form_add.image) }}
            <div class="my-2">
                <div id="selected_image">
                    {% if image is defined %}
                        <img src="{{ asset('uploads/articles/'~image) }}" alt="" id="old_image" class="img-fluid">
                    {% endif %}
                </div>
            </div>
            {{ form_row(form_add.go_on_public) }}
            {{ form_row(form_add.is_visible) }}
            {% if form_add.create_date is defined %}
                {{ form_row(form_add.create_date) }}
            {% endif %}
            {{ form_row(form_add.submit) }}
        </fieldset>
        {{ form_end(form_add) }}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('article_add') }}
    {{ encore_entry_script_tags('ckeditor') }}
{% endblock %}
