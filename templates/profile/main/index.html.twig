{% extends 'fronted/base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <h1 class="mb-3"><i class="fas fa-user mr-2 text-muted"></i>{{ app.user.login }}</h1>
    <div class="row">
        <div class="col-sm-4">
            <div class="p-2 bg-secondary text-white text-center">Information</div>
            <ul class="list-group">
                <li class="list-group-item rounded-0"><strong>ID:</strong> {{ app.user.id }}</li>
                <li class="list-group-item rounded-0"><strong>Status:</strong> {{ app.user.status.title }}</li>
                <li class="list-group-item rounded-0"><strong>Login:</strong> {{ app.user.login }}</li>
                {% if app.user.email %}
                    <li class="list-group-item rounded-0"><strong>Email:</strong> {{ app.user.email }}</li>
                {% endif %}
                {% if app.user.name %}
                    <li class="list-group-item rounded-0"><strong>Name:</strong> {{ app.user.name }}</li>
                {% endif %}
                {% if app.user.gender %}
                    <li class="list-group-item rounded-0"><strong>Gender:</strong> {{ app.user.gender }}</li>
                {% endif %}
                {% if app.user.birthDate %}
                    <li class="list-group-item rounded-0"><strong>Birth date:</strong> {{ app.user.birthDate.format('d.m.Y') }} <strong class="text-info">({{ app.user.birthDate.diff(date()).format('%Y') }} лет)</strong></li>
                {% endif %}
                <li class="list-group-item rounded-0"><strong>Registration date:</strong> {{ app.user.registrationDate.format('d.m.Y H:i') }}</li>
            </ul>
            <div class="mt-2 p-2 bg-secondary text-white text-center">Actions</div>
            <div class="text-center px-2 py-3 border">
                <a class="btn btn-warning" href="{{ path('profile_edit', {'id': app.user.id}) }}" role="button"><i class="fas fa-edit mr-2"></i>Edit</a>
            </div>
        </div>
        <div class="col-sm-8">

            <div class="p-2 bg-secondary text-white text-center"><span class="pr-3">Your publications</span><a class="btn btn-sm btn-light" href="{{ path('profile_article_add') }}" role="button"><i class="fas fa-plus-circle mr-2"></i>Add new</a></div>
            {% if app.user.articles.count > 0 %}
            <ul class="list-group">
                {% for article in app.user.articles %}
                <li class="list-group-item rounded-0 py-1">
                    <div class="row align-items-center">
                        <div class="col-sm-auto">
                            <a class="btn btn-light" href="{{ path('profile_article_edit', {'id': article.id}) }}" role="button"><i class="fas fa-edit"></i></a>
                            <a class="btn btn-light" href="{{ path('profile_article_delete', {'id': article.id}) }}" role="button"><i class="fas fa-trash-alt"></i></a>
                        </div>
                        <div class="col-sm-auto"><a href="{{ path('article_show', {'id': article.id}) }}">{{ article.title }}</a></div>
                    </div>
                </li>
                {% endfor %}
            </ul>
            {% else %}
                <span class="text-muted small">no posts</span>
            {% endif %}

            <div class="p-2 bg-secondary text-white text-center">In Favorites</div>
            <ul class="list-group">
                <li class="list-group-item rounded-0">
                    <strong>Favorite publications </strong><span class="text-muted small">(added to favorites):</span>
                    <div class="mt-2">
                        {% if app.user.favoriteArticles.count > 0 %}
                            {% for article in app.user.favoriteArticles %}
                                <a href="{{ path('article_show', {'id': article.id}) }}" class="d-block m-1">{{ article.title }}</a>
                            {% endfor %}
                        {% else %}
                            <span class="text-muted small">no posts</span>
                        {% endif %}
                    </div>
                </li>
                <li class="list-group-item rounded-0">
                    <strong>Favorite users </strong><span class="text-muted small">(added to favorites):</span>
                    <div class="mt-3">
                        {% if app.user.favoriteUsers.count > 0 %}
                            {% for users in app.user.favoriteUsers %}
                                <div class="d-inline-block mr-3"><i class="fas fa-user mr-2"></i>{{ users.login }}</div>
                            {% endfor %}
                        {% else %}
                            <span class="text-muted small">no users</span>
                        {% endif %}
                    </div>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
