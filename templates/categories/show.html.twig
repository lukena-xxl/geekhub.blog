{% extends 'base.html.twig' %}

{% block title %}Категория "{{ category.title }}"{% endblock %}

{% block body %}
    <h1>Категория "{{ category.title }}"</h1>
    <div class="mt-3">
        <div><strong>ID:</strong> {{ category.id }}</div>
        <div><strong>Название:</strong> {{ category.title }}</div>
        <div><strong>Slug:</strong> {{ category.slug }}</div>
        <div><strong>Описание:</strong> <div class="p-2 text-muted">{{ category.description }}</div></div>
        <div><strong>Количетво статей:</strong> {{ category.articles.count }}</div>
    </div>
    <div class="mt-3">
        <a class="btn btn-warning" href="{{ path('category_edit', {'id': category.id}) }}" role="button">Редактировать</a>
        <a class="btn btn-danger" href="{{ path('category_delete', {'id': category.id}) }}" role="button">Удалить</a>
    </div>
{% endblock %}
