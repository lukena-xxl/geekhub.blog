{% extends 'base.html.twig' %}

{% block title %}Добавление категории{% endblock %}

{% block body %}
    <h1>Добавление категории</h1>
    <form method="post" action="{{ path('category_add') }}">
        <div class="form-group">
            <label for="formGroupTitle">Имя категории *</label>
            <input type="text" name="title" class="form-control w-50" id="formGroupTitle" placeholder="Введите имя">
        </div>
        <div class="form-group">
            <label for="formGroupSlug">Slug категории</label>
            <input type="text" name="slug" class="form-control w-50" id="formGroupSlug" placeholder="Введите slug">
        </div>
        <div class="form-group">
            <label for="formGroupDescription">Описание категории</label>
            <textarea name="description" rows="10" class="form-control w-50" id="formGroupDescription" placeholder="Введите описание"></textarea>
        </div>
        <button type="submit" class="btn btn-success mt-3">Добавить категорию</button>
    </form>
{% endblock %}
