{% extends 'base.html.twig' %}

{% block title %}Редактирование категории{% endblock %}

{% block body %}
    <h1>Редактирование категории</h1>
    <form method="post" action="{{ path('category_edit', {'id': category.id}) }}">
        <div class="form-group">
            <label for="formGroupTitle">Имя категории *</label>
            <input type="text" name="title" value="{{ category.title }}" class="form-control w-50" id="formGroupTitle" placeholder="Введите имя">
        </div>
        <div class="form-group">
            <label for="formGroupSlug">Slug категории</label>
            <input type="text" name="slug" value="{{ category.slug }}" class="form-control w-50" id="formGroupSlug" placeholder="Введите slug">
        </div>
        <div class="form-group">
            <label for="formGroupDescription">Описание категории</label>
            <textarea name="description" rows="10" class="form-control w-50" id="formGroupDescription" placeholder="Введите описание">{{ category.description }}</textarea>
        </div>
        <input type="hidden" name="id" value="{{ category.id }}">
        <button type="submit" class="btn btn-success mt-3">Редактировать категорию</button>
    </form>
{% endblock %}
