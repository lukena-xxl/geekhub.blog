<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block menu %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light sticky-top border-bottom p-3 mb-3">
                <a class="navbar-brand" href="{{ path('index') }}">GEEKHUB</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link{% if controller_name == 'FrontedArticleController' %} active{% endif %}" href="#">Publications</a>
                        </li>
                    </ul>
                    <hr class="d-block d-lg-none" />
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="#" class="font-weight-bold text-dark">{{ app.user.login }}</a>
                        <a href="{{ path('app_logout') }}" class="text-muted ml-2"><i class="fas fa-sign-out-alt"></i></a>
                    {% else %}
                        <a href="{{ path('app_login') }}" class="text-success ml-2">Sign in<i class="fas fa-sign-in-alt ml-2"></i></a>
                    {% endif %}
                </div>
            </nav>
        {% endblock %}
        <div class="px-3 pb-3">
            {% include 'common/flash_messages.html.twig' %}
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
