{% extends 'base.html.twig' %}

{% block title %}Редактирование тега{% endblock %}

{% block body %}
    <h1>Редактирование тега</h1>
    <form method="post" action="{{ path('tag_edit', {'id': tag.id}) }}">
        <div class="form-group">
            <label for="formGroupTitle">Название *</label>
            <input type="text" name="title" value="{{ tag.title }}" class="form-control w-50" id="formGroupTitle" placeholder="Введите название" required>
        </div>
        <div class="form-group">
            <label for="formGroupSlug">Slug</label>
            <input type="text" name="slug" value="{{ tag.slug }}" class="form-control w-50" id="formGroupSlug" placeholder="Введите slug">
        </div>
        <input type="hidden" name="id" value="{{ tag.id }}">
        <button type="submit" class="btn btn-success mt-3">Редактировать тег</button>
    </form>
{% endblock %}
