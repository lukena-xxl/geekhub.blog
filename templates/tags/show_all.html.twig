{% extends 'base.html.twig' %}

{% block title %}Теги{% endblock %}

{% block body %}
    <a class="btn btn-success" href="{{ path('tag_add') }}" role="button"><i class="fas fa-plus-circle mr-2"></i>Добавить тег</a>
    <div class="my-3">
        {{ form_start(form_sort) }}
        <div class="d-inline-block">Теги</div>
        <div class="d-inline-block">{{ form_row(form_sort.article) }}</div>
        <div class="d-inline-block">{{ form_row(form_sort.submit) }}</div>
        {{ form_end(form_sort) }}
    </div>
    {% if tags %}
    <table class="table mt-3">
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Публикации</th>
            <th style="min-width:200px">Действия</th>
        </tr>
        {% for tag in tags %}
            <tr>
                <td>{{ tag.id }}</td>
                <td {% if tag.isVisible == 0 %}
                        class="text-danger"
                    {% else %}
                        class="text-dark"
                    {% endif %}>{{ tag.title }}</td>
                <td>{{ tag.articles.count }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('tag_show', {'id': tag.id}) }}" role="button"><i class="fas fa-info-circle"></i></a>
                    <a class="btn btn-warning" href="{{ path('tag_edit', {'id': tag.id}) }}" role="button"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-danger" href="{{ path('tag_delete', {'id': tag.id}) }}" role="button"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        {% endfor %}
    </table>
    {% else %}
        <p class="mt-3">Еще нет тегов!</p>
    {% endif %}
{% endblock %}
